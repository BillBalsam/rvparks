<div class="background"> 
    <div class="host-profile container" id="host-profile">
        <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                <div class="carousel-inner">

                    <% @places.each_with_index do |place, index| %>
                        <div class="carousel-item <%='active' if index == 0 %>">
                            <div class="card" style="width: 18rem;">
                                <%= link_to place_path(place) do %>
                                    <img src="<%= place.photo %>" class="card-img-top" alt="...">
                                <% end %>
                                <div class="card-body">
                                    <h5 class="card-title"><%= link_to place.park_name, place %></h5>
                                    <p class="card-text"><%= place.address %></p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"> $<%= place.cost  %> </li>
                                    <li class="list-group-item">A second item</li>
                                    <li class="list-group-item">A third item</li>
                                </ul>
                                <div class="card-body">
                                    <a href="#" class="card-link">Card link</a>
                                    <a href="#" class="card-link">Another link</a>
                                </div>
                            </div>
                        </div>
                    <% end %>

                 </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>