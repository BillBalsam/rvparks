<div class="background"> 
    <div class="host-profile container" id="host-profile">
        <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide " data-ride="carousel">

                <div class="carousel-inner">

                    <% @places.each_with_index do |place, index| %>
                        <div class="carousel-item <%='active' if index == 0 %>">
                            <div class="card" style="width: 18rem;">
                                <%= link_to place_path(place) do %>
                                    <img src="<%= place.photo %>" class="card-img-top" alt="...">
                                <% end %>
                                <div class="card-body">
                                    <h5 class="card-title"><%= link_to place.park_name, place %></h5>
                                    <p class="card-text"><%= place.address %></p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"> $<%= place.cost  %> </li>
                                    <li class="list-group-item">A second item</li>
                                    <li class="list-group-item">A third item</li>
                                </ul>
                                <div class="card-body">
                                    <a href="#" class="card-link">Card link</a>
                                    <a href="#" class="card-link">Another link</a>
                                </div>
                            </div>
                        </div>
                    <% end %>

                 </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        

            


                <div class="card" style="width: 18rem;">

                    <img src="<%= @host.avatar %>" class="card-img-top" alt="">

                    <div class="card-body">

                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"> A first item </li>
                        <li class="list-group-item">A second item</li>
                        <li class="list-group-item">A third item</li>
                    </ul>
                    <div class="card-body">
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    </div>
                </div>

                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Launch demo modal
                </button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">

                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                      </div>
                    </div>
                  </div>
                </div>





            
        </div>
    </div>
</div>




